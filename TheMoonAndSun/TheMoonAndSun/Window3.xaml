<Window x:Class="TheMoonAndSun.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheMoonAndSun"
        mc:Ignorable="d"
        Title="Hijri Months" Height="600" Width="600">
    <Grid>
        <TextBox x:Name="hijriMonths" HorizontalAlignment="Left" Height="500" Margin="10,45,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="565" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="closeWindow3" Content="Close" HorizontalAlignment="Left" Margin="495,15,0,0" VerticalAlignment="Top" Width="75" Click="closeWin3"/>
        <Button x:Name="saveWin3" Content="Save" HorizontalAlignment="Left" Margin="400,15,0,0" VerticalAlignment="Top" Width="75" Click="saveHijri"/>
        <Label x:Name="label" Content="Hijri Months" HorizontalAlignment="Left" Margin="15,5,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" FontFamily="Arial Unicode MS" Foreground="#FF0D2EFB"/>

    </Grid>
</Window>
